            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_margin="0.0dip" 
            android:singleLine="true" />
        <TextView
            android:id="@+id/listitem_dev_about"
            android:textSize="12.0sp" 
            android:ellipsize="end"  
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
