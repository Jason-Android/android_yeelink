<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dip"
    android:layout_height="fill_parent"
    android:background="@drawable/bitmap_book_read_chapterlist_repeat"
   >

    <TextView
        android:id="@+id/rl_menuheader"
        android:layout_width="180dip"
        android:layout_height="35.0dip"
        android:background="#ff313131"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:text="设置"
        android:textColor="#ff959595"
        android:textSize="20.0sp" />
    
    <ImageView 
        android:id="@+id/iv_loginState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_state_0"
        android:layout_below="@id/rl_menuheader"
        />
    
    <TextView 
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_loginState"
        android:layout_alignBottom="@id/iv_loginState"
        android:text="@string/none_currentUser"
        android:textColor="@color/white"
        />
    
    <RelativeLayout 
        android:id="@+id/rl_menu_bottom"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button 
            android:id="@+id/bn_login_out"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:text="@string/login"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/menu_button"
            android:layout_marginBottom="1dp"
            />
        
        <Button 
            android:id="@+id/bn_about"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@id/bn_login_out"
            android:text="@string/about"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/menu_button"
            />

    </RelativeLayout>
</RelativeLayout>